<%
let sizes = {
    sm : {size:'sm'},
    default : {label: 'Label bouton MD'},
    lg : {size:'lg', label: 'Label bouton LG'}
};

let samples = [
    { title:'Bouton simple', data:{sizes:sizes}},
    { title:'Bouton désactivé', data:{disabled:true, sizes:sizes}},
    { title:'Bouton icon à gauche', data:{icon :'checkbox-line', iconPlace:'left', sizes:sizes}},
    { title:'Bouton icon à droite', data:{icon :'checkbox-line', iconPlace:'right', sizes:sizes}},
    { title:'Bouton icon seule', data:{icon :'checkbox-line', iconPlace:'only',sizes:sizes}},
    { title:'Bouton tag a href', data:{sizes:sizes, tag:'a'}},
    { title:'Bouton tag div', data:{sizes:sizes, tag:'div'}},
    { title:'Bouton secondaire', data:{secondary:true, sizes:sizes}},
    { title:'Bouton secondaire désactivé', data:{secondary:true, disabled:true, sizes:sizes}},
    { title:'Bouton secondaire icon à gauche', data:{secondary:true, icon :'checkbox-line', iconPlace:'left', sizes:sizes}},
    { title:'Bouton secondaire icon à droite', data:{secondary:true, icon :'checkbox-line', iconPlace:'right', sizes:sizes}},
    { title:'Bouton secondaire icon seule', data:{secondary:true, icon :'checkbox-line', sizes:sizes}},
    { title:'Bouton secondaire tag a href', data:{secondary:true,sizes:sizes, tag:'a'}},
    { title:'Bouton secondaire tag div', data:{secondary:true,sizes:sizes, tag:'div'}},
    { title:'Groupe de bouton taille sm md lg', data:{secondary:true, sizes:sizes, group: true, groupCount: 3}},
    { title:'Groupe de boutons verticaux hiérarchisés avec icones', data:{icon :'checkbox-line', iconPlace:'left', sizes:{sm : {size:'sm'}}, group: true, groupCount: 3}},
    { title:'Groupe de boutons inline', data:{inline:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 2}},
    { title:'Groupe de boutons inline non hiérarchisés', data:{inline:true, secondary:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 2}},
    { title:'Groupe de boutons inline à partir du breakpoint SM', data:{inline:'sm', secondary:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 2}},
    { title:'Groupe de boutons inline à partir du breakpoint MD', data:{equisized:true, inline:'md', secondary:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 2}},
    { title:'Groupe de boutons inline à partir du breakpoint LG', data:{inline:'lg', secondary:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 2}},
    { title:'Groupe de boutons inversés en inline à partir du breakpoint SM', data:{inline:'sm', sizes:{md : {size:'default'}}, align:'right', reverse: true, group: true, groupCount: 2}},
    { title:'Groupe de boutons inline même taille (equisized)', data:{equisized:true, inline:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 3}},
    { title:'Groupe de boutons inline alignés a droite (equisized)', data:{equisized:true, align:'right', inline:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 3}},
    { title:'Groupe de boutons inline alignés au centre (equisized)', data:{equisized:true, icon :'checkbox-line', iconPlace:'left', align:'center',inline:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 3}},
    { title:'Groupe de boutons verticaux même taille (equisized)', data:{equisized:true, sizes:{sm : {size:'sm'}}, group: true, groupCount: 3}},
    { title:'Groupe de boutons verticaux alignés a droite (equisized)', data:{equisized:true, align:'right', sizes:{sm : {size:'sm'}}, group: true, groupCount: 3}},
    { title:'Groupe de boutons verticaux alignés au centre (equisized)', data:{equisized:true, align:'center', sizes:{sm : {size:'sm'}}, group: true, groupCount: 3}},
    { title:'Groupe de boutons d\'icones', data:{sizes:sizes, icon :'checkbox-line', group: true, groupCount: 3}},
    { title:'Groupe de bouton d\'icones inline', data:{inline:true, icon :'checkbox-line', sizes:sizes, group: true, groupCount: 3}},
]

%>

<% for (let i = 0; i < samples.length; i++) {
    let sample = samples[i];
%>
    <h4 class="<%= prefix %>-h4"><%= sample.title %></h4>
    <div class="<%= prefix %>-grid-row <%= prefix %>-grid-row--middle" >
        <% let colMdSize = sample.data.group ? 12 : 3; %>
        <% for (let size in sample.data.sizes) { %>
            <% let sizeName = sample.data.sizes[size].size || 'default'; %>
            <div class="<%= prefix %>-col-md-<%= colMdSize %> <%= prefix %>-col-12 <%= prefix %>-mb-2w">
                <%- include('./samples/button-' + sizeName, sample.data) %>
            </div>
            <% colMdSize = colMdSize === 12 ? 12 : colMdSize+1 %>
        <% } %>
    </div>

    <% for (let size in sample.data.sizes) { %>
        <% let sizeName = sample.data.sizes[size].size || 'default'; %>
        <%- snippet(include('./samples/button-' + sizeName, sample.data)); %>
    <% } %>
<% } %>
